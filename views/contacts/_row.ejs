<tr>
    <td><strong>
            <%= c.first_name %>
                <%= c.last_name %>
        </strong></td>
    <td>
        <%= c.birth_date %>
    </td>
    <td>
        <%= c.sex %>
    </td>
    <td>
        <%= c.email || '-' %>
    </td>
    <td>
        <%= c.likes %>
    </td>
    <td class="row-actions">
        <form method="post" action="/contacts/<%= c.id %>/like" style="display:inline">
            <button class="btn sm" title="Like">👍</button>
        </form>
        <form method="post" action="/contacts/<%= c.id %>/dislike" style="display:inline">
            <button class="btn sm" title="Dislike">👎</button>
        </form>
        <a class="btn sm" href="/contacts/<%= c.id %>/edit">Editar</a>
        <form method="post" action="/contacts/<%= c.id %>/delete" style="display:inline"
            onsubmit="return confirm('Remover este contato?')">
            <button class="btn sm danger">Eliminar</button>
        </form>
    </td>
</tr>
<tr>
    <td colspan="6" class="muted">
        <% if (c.notes) { %>
            <div><em>Obs.:</em>
                <%= c.notes %>
            </div>
            <% } %>
                <% if (c.links_multiline) { %>
                    <div><em>Links:</em>
                        <ul>
                            <% c.links_multiline.split('\n').forEach(u=> { %>
                                <li><a href="<%= u %>" target="_blank" rel="noopener noreferrer">
                                        <%= u %>
                                    </a></li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>
    </td>
</tr>